<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View" />
        <variable
            name="outward"
            type="com.covalsys.phi_scanner.data.network.models.get.InwardModel" />
    </data>

        <LinearLayout
            android:id="@+id/layView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvSlno"
                android:layout_width="@dimen/dimen35dp"
                android:layout_height="match_parent"
                android:padding="3dp"
                android:gravity="start|center"
                android:text=""
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvBatch"
                android:layout_width="@dimen/dimen150dp"
                android:layout_height="match_parent"
                android:padding="3dp"
                android:text=" "
                android:gravity="center"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvCoilNo"
                android:layout_width="@dimen/dimen150dp"
                android:layout_height="match_parent"
                android:padding="3dp"
                android:text=" "
                android:gravity="center"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvThickness"
                android:layout_width="@dimen/dimen120dp"
                android:layout_height="match_parent"
                android:padding="3dp"
                android:text=" "
                android:gravity="center"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvWidth"
                android:layout_width="@dimen/dimen120dp"
                android:layout_height="match_parent"
                android:padding="3dp"
                android:text=" "
                android:gravity="center"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvLength"
                android:layout_width="@dimen/dimen120dp"
                android:layout_height="match_parent"
                android:padding="3dp"
                android:text=" "
                android:gravity="center"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvQty"
                android:layout_width="@dimen/dimen120dp"
                android:layout_height="match_parent"
                android:padding="3dp"
                android:text=" "
                android:gravity="center"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvRemove"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".5"
                android:padding="3dp"
                android:gravity="center"
                android:visibility="gone"
                android:text="Delete"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead" />

            <ImageView
                android:id="@+id/imDelete"
                android:layout_width="0dp"
                android:layout_height="@dimen/dimen40"
                android:layout_weight=".5"
                android:padding="@dimen/dimen5dp"
                android:src="@drawable/ic_delete" />

        </LinearLayout>
</layout>