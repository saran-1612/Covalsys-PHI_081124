<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

        <variable
            name="products"
            type="com.covalsys.phi_scanner.data.network.models.get.InwardModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:id="@+id/productsCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen2dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="@dimen/dimen2dp"
            android:layout_marginBottom="@dimen/dimen1dp"
            android:clickable="true"
            android:focusable="true"
            app:cardCornerRadius="3dp"
            app:cardElevation="3dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/itemName"
                        style="@style/TextStyle.Heading"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.5"
                        android:paddingHorizontal="5dp"
                        android:paddingTop="2dp"
                        android:text="@string/item_desc"
                        android:textAlignment="viewStart" />

                    <TextView
                        android:id="@+id/itemPrice"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:paddingHorizontal="5dp"
                        android:paddingTop="2dp"
                        android:text="@string/product_details_price"
                        android:textAlignment="center"
                        android:textColor="@color/green_dark"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/itemCodeTxt"
                            style="@style/TextStyle.Title.Sub"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.3"
                            android:paddingHorizontal="5dp"
                            android:paddingTop="2dp"
                            android:text="@string/item_code"
                            android:textAlignment="viewStart"
                            android:textColor="@color/vDarkGray" />

                        <TextView
                            android:id="@+id/space"
                            style="@style/TextStyle.Title.Sub"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.1"
                            android:paddingHorizontal="5dp"
                            android:paddingTop="2dp"
                            android:text="@string/space"
                            android:textAlignment="viewStart"
                            android:textColor="@color/grey_text" />


                        <TextView
                            android:id="@+id/itemCode"
                            style="@style/TextStyle.Title.Sub"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:paddingHorizontal="5dp"
                            android:paddingTop="2dp"
                            android:text="@string/item_code"
                            android:textAlignment="viewStart"
                            android:textColor="@color/vDarkGray" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/inStockTxt"
                            style="@style/TextStyle.Title.Sub"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.3"
                            android:paddingHorizontal="5dp"
                            android:paddingTop="2dp"
                            android:text="@string/stock"
                            android:textAlignment="viewStart"
                            android:textColor="@color/vDarkGray" />

                        <TextView
                            android:id="@+id/space1"
                            style="@style/TextStyle.Title.Sub"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.1"
                            android:paddingHorizontal="5dp"
                            android:paddingTop="2dp"
                            android:text="@string/space"
                            android:textAlignment="viewStart"
                            android:textColor="@color/grey_text" />

                        <TextView
                            android:id="@+id/inStock"
                            style="@style/TextStyle.Title.Sub"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:paddingHorizontal="5dp"
                            android:paddingTop="2dp"
                            android:text="@string/stock"
                            android:textAlignment="viewStart"
                            android:textColor="@color/vDarkGray" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/itemUomTxt"
                            style="@style/TextStyle.Title.Sub"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.3"
                            android:paddingHorizontal="5dp"
                            android:paddingTop="2dp"
                            android:text="@string/uom"
                            android:textAlignment="viewStart"
                            android:textColor="@color/vDarkGray" />

                        <TextView
                            android:id="@+id/space2"
                            style="@style/TextStyle.Title.Sub"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.1"
                            android:paddingHorizontal="5dp"
                            android:paddingTop="2dp"
                            android:text="@string/space"
                            android:textAlignment="viewStart"
                            android:textColor="@color/grey_text" />


                        <TextView
                            android:id="@+id/itemUom"
                            style="@style/TextStyle.Title.Sub"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:paddingHorizontal="5dp"
                            android:paddingTop="2dp"
                            android:text="@string/uom"
                            android:textAlignment="viewStart"
                            android:textColor="@color/vDarkGray" />

                    </LinearLayout>


                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>


    </LinearLayout>
</layout>
