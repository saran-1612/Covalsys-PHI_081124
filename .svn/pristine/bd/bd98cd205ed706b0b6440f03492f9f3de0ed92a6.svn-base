<?xml version="1.0" encoding="utf-8"?>

                                                        

    

                                           

                 
                           
                                                                       
           


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:tag="layout/my_orders_adapter_layout_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">

        <androidx.cardview.widget.CardView
            android:id="@+id/ordersCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen2dp"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="@dimen/dimen2dp"
            android:layout_marginBottom="@dimen/dimen1dp"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true"
            app:cardCornerRadius="3dp"
            app:cardElevation="3dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/customerName"
                        style="@style/TextStyle.Heading"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingHorizontal="5dp"
                        android:paddingTop="2dp"
                        android:text="@string/customer_name"
                        android:textAlignment="viewStart" />

                    <TextView
                        android:id="@+id/orderStatus"
                        style="@style/TextAppearance.Text.Regular"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:paddingHorizontal="5dp"
                        android:paddingTop="2dp"
                        android:text="@string/status"
                        android:textAlignment="center"
                        android:textColor="@color/green_dark"
                        android:textStyle="normal" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/orderNumTxt"
                            style="@style/TextStyle.Title.Sub"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.2"
                            android:paddingHorizontal="5dp"
                            android:paddingTop="2dp"
                            android:text="@string/order_no"
                            android:textAlignment="viewStart"
                            android:textColor="@color/grey_text" />

                        <TextView
                            android:id="@+id/space"
                            style="@style/TextStyle.Title.Sub"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.1"
                            android:paddingHorizontal="5dp"
                            android:paddingTop="2dp"
                            android:text="@string/space"
                            android:textAlignment="viewStart"
                            android:textColor="@color/grey_text" />


                        <TextView
                            android:id="@+id/orderNum"
                            style="@style/TextStyle.Title.Sub"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:paddingHorizontal="5dp"
                            android:paddingTop="2dp"
                            android:text="@string/order_no"
                            android:textAlignment="viewStart"
                            android:textColor="@color/grey_text" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/soOrderValueText"
                            style="@style/TextStyle.Title.Sub"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.2"
                            android:paddingHorizontal="5dp"
                            android:paddingTop="2dp"
                            android:text="@string/value"
                            android:textAlignment="viewStart"
                            android:textColor="@color/grey_text" />

                        <TextView
                            android:id="@+id/space1"
                            style="@style/TextStyle.Title.Sub"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.1"
                            android:paddingHorizontal="5dp"
                            android:paddingTop="2dp"
                            android:text="@string/space"
                            android:textAlignment="viewStart"
                            android:textColor="@color/grey_text" />

                        <TextView
                            android:id="@+id/soOrderValue"
                            style="@style/TextStyle.Title.Sub"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:paddingHorizontal="5dp"
                            android:paddingTop="2dp"
                            android:text="@string/product_details_price"
                            android:textAlignment="viewStart"
                            android:textColor="@color/grey_text" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/soDateText"
                            style="@style/TextStyle.Title.Sub"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.2"
                            android:paddingHorizontal="5dp"
                            android:paddingTop="2dp"
                            android:text="@string/so_date"
                            android:textAlignment="viewStart"
                            android:textColor="@color/grey_text" />

                        <TextView
                            android:id="@+id/space3"
                            style="@style/TextStyle.Title.Sub"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.1"
                            android:paddingHorizontal="5dp"
                            android:paddingTop="2dp"
                            android:text="@string/space"
                            android:textAlignment="viewStart"
                            android:textColor="@color/grey_text" />

                        <TextView
                            android:id="@+id/soDate"
                            style="@style/TextStyle.Title.Sub"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:paddingHorizontal="5dp"
                            android:paddingTop="2dp"
                            android:text="@string/so_date"
                            android:textAlignment="viewStart"
                            android:textColor="@color/grey_text" />
                    </LinearLayout>




                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>


    </androidx.constraintlayout.widget.ConstraintLayout>

         