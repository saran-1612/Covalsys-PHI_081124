                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="5dp"
                    android:background="@color/layout_bg" />

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>


    </LinearLayout>

         


